# {{ ansible_managed }}
---
version: "3"

networks:
  default:
    driver: bridge

services:
  grocy:
    image: linuxserver/grocy:{{ pantry_manager_version }}
    container_name: grocy
    restart: unless-stopped
    environment:
      - PUID=1000
      - PGID=1000
      - TZ='{{ pantry_manager_timezone }}'
    volumes:
      - ./grocy:/config
    ports:
      - 9283:80
    networks:
      - default
