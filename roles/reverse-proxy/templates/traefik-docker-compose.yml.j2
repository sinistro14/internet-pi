# {{ ansible_managed }}
---
version: "3"

networks:
  default:
    name: reverse-proxy
    driver: bridge
  pihole:
    external: true
  pantry:
    external: true
  ha:
    external: true
  monitoring:
    external: true
  media-server:
    external: true

services:
  reverse-proxy:
    image: traefik:{{ reverse_proxy_version }}
    command:
      - "--api.dashboard=true"
      - "--api.insecure=false"
      - "--providers.docker"
      - "--providers.docker.exposedbydefault=false"
      - "--entrypoints.http.address=:80"
    ports:
      - 80:80
    expose:
      - 8080
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock:ro"
    networks:
      - default
      - pihole
      - pantry
      - ha
      - monitoring
      - media-server
    labels:
      - "traefik.enable=true"
      - "traefik.port=8080"
      - "traefik.http.routers.dashboard.entrypoints=http"
      - "traefik.http.routers.dashboard.service=api@internal"
      - "traefik.http.routers.dashboard.rule=Host(`traefik.{{ server_domain }}`)"
    restart: unless-stopped
