# {{ ansible_managed }}
---
version: "3"

networks:
  media-front-tier:
    driver: bridge

# More info at https://hub.docker.com/r/plexinc/pms-docker/
services:
  plex:
    container_name: plex
    image: lscr.io/linuxserver/plex
    networks:
      - media-front-tier
    restart: always
    volumes:
      - ./media/config:/config
      - ./media/tv:/tv
      - ./media/movies:/movies
    environment:
      - PUID=1000
      - PGID=1000
      - VERSION=latest
      - TZ='{{ media_server_timezone }}'
      - PLEX_CLAIM='{{ plex_claim_token }}'
    ports:
      - 32400:32400/tcp
      - 3005:3005/tcp
      - 8324:8324/tcp
      - 32469:32469/tcp
      - 1900:1900/udp
      - 32410:32410/udp
      - 32412:32412/udp
      - 32413:32413/udp
      - 32414:32414/udp
